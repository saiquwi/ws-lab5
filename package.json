{
  "name": "lab5-jwt-auth",
  "version": "1.0.0",
  "description": "JWT Authentication with CI/CD Lab 5",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:ci": "jest --ci --coverage",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "sequelize": "^6.28.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "supertest": "^6.2.4",
    "nodemon": "^2.0.20",
    "eslint": "^8.23.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "app/**/*.js",
      "!app/models/index.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "keywords": ["jwt", "authentication", "postgresql", "ci-cd"],
  "author": "Student",
  "license": "MIT"
}